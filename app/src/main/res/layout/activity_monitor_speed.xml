<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_monitor_speed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.ion.iondriving.MonitorSpeedActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#bcc6cc" >

        <ImageView
            android:id="@+id/iv_arch_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_archive"

            android:adjustViewBounds="false" />

        <TextView
            android:id="@+id/textViewSummaryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Monitor Speed"
            android:textColor="#000"
            android:textSize="21sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/settings"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/btn_start_stop"
        android:text="@string/start"
        android:padding="8dp"
        android:background="@drawable/button"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/linearLayoutInformation"
        android:layout_alignLeft="@+id/linearLayoutInformation"
        android:layout_alignStart="@+id/linearLayoutInformation"
        android:layout_alignRight="@+id/linearLayoutInformation"
        android:layout_alignEnd="@+id/linearLayoutInformation" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/linearLayoutInformation"
        android:background="@drawable/dial_1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_your_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="YOUR SPEED"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:text="0.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_speed"
            android:padding="10dp"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textStyle="italic"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_kpm"
            android:text="@string/kpm"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="24sp"
           />

    </LinearLayout>


</RelativeLayout>
